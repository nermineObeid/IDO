<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - To Do List</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js" type="text/javascript"></script>

    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/justified-nav.css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
 
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

        </div>
        <div class="navbar-collapse collapse row">
            <div class="col-sm-6 logo">
                <a href="http://localhost:53975/ToDos/Index"><img src="~/images/logo.png" /></a>
            </div>
            <div class="col-sm-6 flex-end">
                <div class="search-section">
                    <input type="text" id="searchtxt" placeholder="What are you looking for?" value="" />
                    <button onClick="replaceText();" id="search_button"></button>
                </div>


                <div class="create-btn">
                    <a href="/ToDos/Create">
                        <img src="~/images/add-icon.svg" />
                    </a>

                    <!--@Html.ActionLink("Create New", "Create") -->
                </div>

                @Html.Partial("_LoginPartial")

            </div>

        </div>
        <div class="announcement-bar">
            <div class="container"><div class="row"><div class="col-sm-10"><p>"Anything that can go wrong, will go wrong!"</p></div><div class="col-sm-2 txt-right"><i class="ico-times" role="img" aria-label="Cancel"></i></div></div></div>
        </div>
        <div class="announcement-bar-help">
            <div class="container">
                <div class="row"><div class="col-sm-10"></div><div class="col-sm-2"><span class="info-sign"></span></div> </div>
            </div>
        </div>

        <div class="full-width">
            <div class="container body-content">
                @RenderBody()

                <footer>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
